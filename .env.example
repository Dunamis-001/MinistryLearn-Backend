# Flask Configuration
FLASK_ENV=development
FLASK_APP=wsgi.py

# Database Configuration
# For local PostgreSQL:
# DATABASE_URL=postgresql://postgres:password@localhost:5432/ministrylearn
# For Render PostgreSQL:
DATABASE_URL=postgresql://username:password@host:port/database

# JWT Configuration
# Generate a secure secret: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=your-secure-jwt-secret-here

# Cloudinary Configuration (for file uploads)
# Get from: https://cloudinary.com
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name

# SendGrid Configuration (for emails)
# Get from: https://sendgrid.com
SENDGRID_API_KEY=your-sendgrid-api-key

# CORS Configuration
# Add your frontend URLs (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://your-frontend-ip:5173
